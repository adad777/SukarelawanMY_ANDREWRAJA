<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:background="@color/bg_light_gray"
    android:layout_height="match_parent"
    tools:context=".feature.auth.LoginFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginTitle"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logo_uni"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_unimy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/orange"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/logo_uni"
                app:layout_constraintStart_toStartOf="@+id/logo_uni"
                app:layout_constraintTop_toBottomOf="@+id/logo_uni" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_uplift"
                app:layout_constraintEnd_toEndOf="@+id/logo_uni"
                app:layout_constraintStart_toStartOf="@+id/logo_uni"
                app:layout_constraintTop_toBottomOf="@+id/x" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Title Text -->
        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"/>

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back"
            android:textSize="20sp"
            android:visibility="gone"
            android:textColor="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/loginTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"/>

        <!-- Email Input -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:id="@+id/cardemailEditText"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/edittext_background">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_email"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/dark_gray" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:padding="12dp"
                    android:inputType="textEmailAddress"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Password Input -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:id="@+id/card_passwrod"
            app:layout_constraintTop_toBottomOf="@id/cardemailEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edittext_background">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_password"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/dark_gray" />

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Password"
                    android:layout_weight="1"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:padding="12dp"
                    android:inputType="textPassword"/>

                <ImageButton
                    android:id="@+id/togglePassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_visibility_off"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/dark_gray" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_passwrod"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingVertical="16dp"/>

        <!-- Forgot Password Link -->
        <TextView
            android:id="@+id/forgotPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textColor="@color/orange"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/loginButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Divider -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/text_gray"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/forgotPasswordText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Register Prompt -->
        <TextView
            android:id="@+id/registerPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/don_t_have_an_account_register_instead"
            android:textColor="@color/text"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/forgotPasswordText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>